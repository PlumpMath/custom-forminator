<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:p='urn:import:com.vaadin.polymer.paper.widget'>

	<g:HTMLPanel addStyleNames="header-panel-sample">
	<style is="custom-style">

		<!-- Outer panel shape -->
		
		body {
		font-size: 12px;
		}
		
		.paper-header-panel {
		margin: 0px 12px;
		}
		
		.toolbar {
		background: #4285f4;
		}
		
		.header {
		color: #ffffff;
		font-size: 1.5em;
		margin-left: 10px;
		}
		
		paper-drawer-panel .sidebar {
		background-color: #596068;
		}

		paper-item {
		background: black;
		cursor: pointer;
		padding: 0px 15px;
		min-height: 30px;
		color: #ffffff;
		}

		.collapse-content {
		padding: 10px;
		}
		
		<!-- Buttons -->
		paper-button.nav {
			font-size: .9em;
			border: 1px #ffffff solid;
			border-radius: 18px;
			padding: 0px 8px;
			margin: 5px;
		}

		paper-button:hover.nav {
		background: #62AAF3;
		}

		paper-button[toggles].nav {
		color: #ffffff;
		transition: background-color 0.3s
		}

		paper-button[toggles][active].nav {
		background: #62AAF3;
		}
	</style>
		<paper-drawer-panel class="flex" right-drawer="">
			<div main="">
				<paper-header-panel mode="seamed">
					<paper-toolbar class="toolbar">
						<span class="header">Custom Forminator</span>
					</paper-toolbar>
					<div ui:field="content" class="content vertical center-justified layout" ></div>
				</paper-header-panel>
			</div>
			<div drawer="" class="sidebar">
				<button>custom themes</button>
				<paper-header-panel mode="seamed">
					<paper-item ui:field="menu1">
						<span>TYPE</span>
						<iron-icon icon="expand-more"></iron-icon>
					</paper-item>
					<iron-collapse ui:field="collapse1">
						<div class="collapse-content">
							<paper-button noink="true" toggles="true" class="nav" ui:field="navText">TEXT</paper-button>
							<paper-button noink="true" toggles="true" class="nav" ui:field="navIcon">ICON</paper-button>
							<paper-button noink="true" toggles="true" class="nav" ui:field="navImage">IMAGE</paper-button>
							<div ui:field="controlsText">
								<div>
									<label>Online</label>
									<input is="iron-input" bind-value=""></input>
								</div>
								<div>
									<label>Offline</label>
									<input is="iron-input" bind-value=""></input>
								</div>
							</div>
						</div>
					</iron-collapse>
					
					<paper-item ui:field="menu2">
						<span>POSITION</span>
						<iron-icon icon="expand-more"></iron-icon>
					</paper-item>
					<iron-collapse ui:field="collapse2">
						<div class="collapse-content">
							Stuff insiiiiiiide
						</div>
					</iron-collapse>
					
					<paper-item ui:field="menu3">
						<span>TOP OFFSET</span>
						<iron-icon icon="expand-more"></iron-icon>
					</paper-item>
					<iron-collapse ui:field="collapse3">
						<div class="collapse-content">
							Stuff insiiiiiiide
						</div>
					</iron-collapse>
					
					<paper-item ui:field="menu4">
						<span>COLOR</span>
						<iron-icon icon="expand-more"></iron-icon>
					</paper-item>
					<iron-collapse ui:field="collapse4">
						<div class="collapse-content">
							Stuff insiiiiiiide
						</div>
					</iron-collapse>
				</paper-header-panel>
			</div>
		</paper-drawer-panel>
		</g:HTMLPanel>
	</ui:UiBinder>